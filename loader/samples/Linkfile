MEMORY
{
    ZPRAM:         start =   $02, size =   $fe, type = rw;
    # the C STACK memory area must be defined in your applications's link file
    # if you use the importldr function to dynamically link the loader
    STACK:         start = $0100, size =   $80, type = rw, define = yes;
    RAM:           start = $0800, size = $c800, type = rw;
}

SEGMENTS
{
    ZEROPAGE:      load = ZPRAM, type = zp;

    CODE:          load = RAM,   type = ro;

    RODATA:        load = RAM,   type = ro, optional = yes;
    DATA:          load = RAM,   type = rw, optional = yes;
    BSS:           load = RAM,   type = rw, optional = yes, align = 256;

    # these three segments must be defined in your application's link file
    LOADERZP:      load = ZPRAM, type = zp, define = yes;
    LOADERINSTALL: load = RAM,   start = $8000, define = yes;
    LOADER:        load = RAM,   start = $c800, define = yes;
}
